<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/list_item_margin"
        android:layout_marginBottom="0dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/item_church_icon_card"
            android:layout_width="84dp"
            android:layout_height="84dp"
            android:elevation="8dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="8dp">

            <ImageView
                android:id="@+id/item_church_icon"
                android:layout_width="84dp"
                android:layout_height="84dp"
                android:layout_alignParentStart="true"
                android:src="@drawable/ic_launcher_round" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/item_church_name"
            android:text="test text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/item_church_icon_card"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"
            android:textSize="14sp"
            android:fontFamily="@font/ubuntu_bold"
            />

        <TextView
            android:id="@+id/item_church_adress"
            android:text="test text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/item_church_icon_card"
            android:layout_toEndOf="@+id/item_church_icon_card"
            android:layout_marginBottom="4dp"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/ubuntu_condensed"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/delim"/>

</LinearLayout>